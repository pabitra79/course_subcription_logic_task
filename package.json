{
  "name": "course-subscription-app",
  "version": "1.0.0",
  "description": "Mini Course Subscription Application",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "build": "npm run clean && tsc && npm run copy-views && npm run copy-public",
    "copy-views": "copyfiles -u 1 \"src/views/**/*\" dist/",
    "copy-public": "copyfiles -u 1 \"public/**/*\" dist/",
    "clean": "if exist dist rmdir /s /q dist",
    "start": "node dist/app.js",
    "build:windows": "tsc && xcopy /E /I /Y src\\views dist\\views && xcopy /E /I /Y public dist\\public",
    "build:linux": "tsc && cp -r src/views dist/views"

  },
  "keywords": ["course", "subscription", "jwt", "express"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}