<!-- views/my-courses.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Courses</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f6f8;
            margin: 0;
        }

        .navbar {
            background: #4f46e5;
            color: white;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
        }

        .navbar a {
            color: white;
            margin-left: 20px;
            text-decoration: none;
        }

        .container {
            max-width: 1100px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .course-item {
            background: white;
            display: flex;
            margin-bottom: 20px;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 10px rgba(0,0,0,.1);
        }

        .course-item img {
            width: 250px;
            height: 150px;
            object-fit: cover;
        }

        .course-details {
            padding: 20px;
            flex: 1;
        }

        .course-title {
            margin: 0 0 10px;
            font-size: 20px;
        }

        .empty {
            background: white;
            padding: 60px;
            text-align: center;
            border-radius: 8px;
        }
    </style>
</head>

<body>
<div class="navbar">
    <h2>ðŸŽ“ Course Platform</h2>
    <div>
        <a href="/courses">All Courses</a>
        <a href="/my-courses">My Courses</a>
        <a href="/auth/logout">Logout</a>
    </div>
</div>

<div class="container">
    <h2>My Enrolled Courses</h2>

    <% if (!subscriptions || subscriptions.length === 0) { %>
        <div class="empty">
            <h3>No courses enrolled yet</h3>
            <a href="/courses">Browse Courses</a>
        </div>
    <% } else { %>

        <% subscriptions.forEach(sub => { %>

            <% if (sub.courseId) { %>
                <div class="course-item">
                    <img src="<%= sub.courseId.image || 'https://via.placeholder.com/250x150' %>">

                    <div class="course-details">
                        <h3 class="course-title"><%= sub.courseId.title %></h3>
                        <p><%= sub.courseId.description %></p>

                        <p>
                            ðŸ’° Paid:
                            <strong>
                                <%= sub.pricePaid === 0 ? 'Free' : '$' + sub.pricePaid %>
                            </strong>
                        </p>

                        <p>
                            ðŸ“… Enrolled:
                            <%= new Date(sub.subscribedAt).toLocaleDateString() %>
                        </p>
                    </div>
                </div>
            <% } else { %>
                <div class="course-item">
                    <img src="https://via.placeholder.com/250x150">

                    <div class="course-details">
                        <h3 class="course-title">Course Removed</h3>
                        <p>This course no longer exists.</p>
                    </div>
                </div>
            <% } %>

        <% }) %>

    <% } %>
</div>

</body>
</html>
